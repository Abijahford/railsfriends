<div class="card">
  <div class="card-header">
    <h2 class="m-2">Edit Profile<% resource_name.to_s.humanize %></h2>
  </div>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
  
    <div class="field form-group m-2">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control m-2", placeholder:"First Name" %>
    </div>
  
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>
  
    <div class="field form-group m-2">
      <%= f.label :password %> <i class="m-2">(leave blank if you don't want to change it)</i><br />
      <%= f.password_field :password, autocomplete: "new-password", class:"form-control m-2", placeholder:"Password" %>
      <% if @minimum_password_length %>
        <em class= 'm-2'><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>
  
    <div class="field form-group m-2">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control m-2", placeholder:"Password" %>
    </div>
  
    <div class="field form-group m-2">
      <%= f.label :current_password %> <i class="m-2">(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password", class:"form-control m-2", placeholder:"Current Password" %>
    </div>
    <div class="actions">
      <%= f.submit "Update", class: 'btn btn-secondary m-3' %>
    </div>
  <% end %>
  <br><br>
  <div class="card m-2">
    <div class="card-header">
      <h3 class="m-2">Cancel my account</h3>
    </div>
    <div class="card-body">
      <h5 class="card-title m-2">Unhappy?</h5>
      <p class="card-text"><%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-danger m-2' %></p>
    </div>
  </div>
  </div>
</div>




<br>
<%= link_to "Back", :back, class: 'm-2' %>
